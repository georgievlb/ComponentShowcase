<ul class="sub-menu flex-container">
    @foreach (var navMenuItem in NavMenuItems)
    {
        <div class="separator">
            <li class="menu-item flex-item" @onclick="() => OnItemSelected(navMenuItem)">@navMenuItem.Text</li>
            @if (navMenuItem.Children != null)
            {
                <ul class="sub-menu">
                    @foreach (var childItem in navMenuItem.Children)
                    {
                        <div>
                            <li class="menu-item flex-item" @onclick="() => OnItemSelected(childItem)">@childItem.Text</li>
                            @if (childItem.Children != null)
                            {
                                <NavMenuSection NavMenuItems="childItem.Children" OnSelect="OnSelect"></NavMenuSection>
                            }
                        </div>
                    }
                </ul>
            }
        </div>
    }
</ul>